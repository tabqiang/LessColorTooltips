{
	"name": "lesscolortooltip",
	"displayName": "LessColorTooltip",
	"description": "Show tooltips for colors in less files",
	"version": "0.1.0",
	"publisher": "Caps",
	"engines": {
		"vscode": "^1.72.1"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"properties": {
				"lessColorTooltip.themePath": {
					"type": "string",
					"default": "",
					"description": "The file path to the theme file where custom properties are defined."
				},
				"lessColorTooltip.variablePath": {
					"type": "string",
					"default": "",
					"description": "The file path to the variable file where LESS variables are defined."
				}
			}
		}
	},
	"activationEvents": [
		"onLanguage:less",
		"onLanguage:vue"
	],
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"lint": "eslint src --ext ts",
		"publish": "pnpm vsce publish --no-dependencies"
	},
	"devDependencies": {
		"@types/vscode": "^1.72.1",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"ts-loader": "^9.5.1",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tabqiang/LessColorTooltips"
	},
	"author": {
		"name": "Caps",
		"email": "838269741@qq.com"
	}
}
